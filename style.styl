@import 'nib' 
* 
  margin 0

.center-box
  display flex
  p
    margin auto

body
  font-family 'Source Sans Pro', sans-serif
  background transparent url('img/bg.png') repeat 0 0

.profile
  position relative
  background-color #2f363e
  width 324px
  border 1px solid black
  border-radius 8px
  height 440px
  margin 78px auto
  &:after
    position absolute
    bottom 0
    width 300px
    border-radius 10px/20px
    margin auto
    box-shadow 0 10px 30px black
    height 80px
    z-index -1
    content '\0020'
    left 12px

.top
  border-radius 8px 8px 0 0
  background-color #e7decd
  height 140px
  width 100%
  box-sizing border-box
  padding-top 16px

.dot
  font-size 10px
  line-height 0.5
  text-align center
  letter-spacing 4px
  margin 0
  padding 0
  color #e7decd
  text-shadow 0 1px 1px #999

.avatar
  text-align center
  transform translate(0, -50%)
  margin-bottom -80px

  &:before
    content '\0020'
    width 160px
    height 80px
    position absolute
    left 80px
    border-radius 160px 160px 0 0
    z-index 2
    background-image linear-gradient(left, rgba(255,255,255,0), rgba(255,255,255,0.2) 45%, rgba(255,255,255,0.8))
    transform-origin bottom center
    transform rotate(-45deg)

.avatar img
  border-radius 100%
  box-shadow 0 0 0 6px #e7decd

.info
  font-family 'Source Sans Pro'
  text-align center
  text-transform uppercase
  margin-bottom 26px
  height 48px
  p
    margin 0
  .name
    margin-top 18px
    font-size 16px
    line-height 1.75
    color #e7decd
  .title
    font-size 12px
    line-height 1.6666666666667
    color #545c69

.action .button
  box-shadow 0 0 2px 0 #31353e, inset 0 1px 0 1px #d16e59
  width 164px
  height 38px
  background-color #c44b30
  display block
  margin auto
  vertical-align middle
  text-align center
  font-size 10px
  line-height 40px
  text-transform uppercase
  border-radius 6px
  border 1px solid #161b1f
  color #e6dfcd
  cursor pointer
  text-shadow 0 1px 1px #333

.status
  position absolute
  bottom 0
  width 100%
  height 54px
  border-top 1px solid #171a1f
  box-shadow inset 0 0 1px 0 #3e324d
  text-transform uppercase
  display table

.number
  font-size 16px
  color #191e24
  padding 0 8px
  font-weight bold

.followers,.following
  box-sizing border-box
  font-size 10px
  color #535d69
  float left
  height 54px
  width 162px

.followers
  border-right 1px solid #171a1f
